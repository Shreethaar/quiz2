package quiz;
import java.util.Scanner;

public class quiz2 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int num,revNum=0;
		
		System.out.println("Enter a number");
		num=sc.nextInt();
		while(num!=0)
		{
			revNum=revNum*10;
			revNum=revNum+num%10;
			num=num/10;
		}
		System.out.println("The reverse number is "+revNum);
		
	}
}
